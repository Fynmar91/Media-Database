<UserControl x:Class="GUI.ListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView x:Name="List_Media" MouseDoubleClick="List_Media_MouseDoubleClick"  KeyDown="List_Media_KeyDown">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Titel"  Width="320" DisplayMemberBinding="{Binding Path=MyTitle}"/>
                    <GridViewColumn Header="Zuletzt" Width="160" DisplayMemberBinding="{Binding Path=MyLastWatchDate}"/>
                    <GridViewColumn Header="Wertung" Width="80" DisplayMemberBinding="{Binding Path=MyRating}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
