<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Medien" Height="900" Width="1440">
    <Window.Resources>
        <DataTemplate x:Name="listViewTemplate" DataType="{x:Type local:ListViewModel}">
            <ListView DataContext="{Binding}"/>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="#FF535353">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Fill="#FF363636"/>
        <Rectangle Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Fill="#FF363636"/>

        <DockPanel Grid.Row="0" Grid.Column="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                <Button x:Name="Button_List" Content="Liste" Click="Button_List_Click" Background="#FF2B2B2B" Foreground="#FFDEDEDE" FontSize="20" Width="100"/>
                <Rectangle Width="20" />
                <Button x:Name="Button_Tile" Content="Kacheln" Click="Button_Tile_Click" Background="#FF2B2B2B" Foreground="#FFDEDEDE" FontSize="20" Width="100"/>
            </StackPanel>
        </DockPanel>


        <DockPanel Grid.Row="1" Grid.Column="0">
            <StackPanel VerticalAlignment="Bottom">
                <Button x:Name="Button_Book" Content="Bücher" Click="Button_Book_Click" Background="#FF2B2B2B" Foreground="#FFDEDEDE"/>
                <Button x:Name="Button_WebNovel" Content="Web Novels" Click="Button_WebNovel_Click" Background="#FF2B2B2B" Foreground="#FFDEDEDE"/>
            </StackPanel>
        </DockPanel>
        <DockPanel Grid.Row="3" Grid.Column="0">
            <StackPanel VerticalAlignment="Top">
                <Button x:Name="Button_Add" Content="Hinzufügen" Click="Button_Add_Click" Background="#FF2B2B2B" Foreground="#FFDEDEDE"/>
            </StackPanel>
        </DockPanel>


        <ContentControl Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="3" Content="{Binding}"/>

    </Grid>
</Window>
