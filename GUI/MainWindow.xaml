<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Medien" Height="900" Width="1440">
    
    <Window.Resources>       
        <Style TargetType="{x:Type Button}" x:Key="SameBackgroundButton">
            <Setter Property="Background" Value="#FF2B2B2B" />
            <Setter Property="Foreground" Value="#FFF0F0F0" />
            <Setter Property="Margin" Value="0,2,0,2" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF636363" TargetName="Border" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#FF535353">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Fill="#FF363636"/>
        <Rectangle Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Fill="#FF363636"/>

        <DockPanel Grid.Row="0" Grid.Column="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                <Button x:Name="Button_List" Content="Liste" Click="Button_List_Click" FontSize="20" Width="100" Style="{StaticResource SameBackgroundButton}"/>
                <Rectangle Width="20" />
                <Button x:Name="Button_Tile" Content="Kacheln" Click="Button_Tile_Click" FontSize="20" Width="100" Style="{StaticResource SameBackgroundButton}"/>
            </StackPanel>
        </DockPanel>


        <DockPanel Grid.Row="1" Grid.Column="0">
            <StackPanel VerticalAlignment="Bottom">
                <Button x:Name="Button_Book" Content="Bücher" Click="Button_Book_Click" Style="{StaticResource SameBackgroundButton}"/>
                <Button x:Name="Button_WebNovel" Content="Web Novels" Click="Button_WebNovel_Click" Style="{StaticResource SameBackgroundButton}"/>
            </StackPanel>
        </DockPanel>
        <DockPanel Grid.Row="3" Grid.Column="0">
            <StackPanel VerticalAlignment="Top">
                <Button x:Name="Button_Add" Content="Hinzufügen" Click="Button_Add_Click" Style="{StaticResource SameBackgroundButton}"/>
                <Button x:Name="Button_Save" Content="Speichern" Click="Button_Save_Click" Style="{StaticResource SameBackgroundButton}"/>
            </StackPanel>
        </DockPanel>


        <Frame x:Name="PageView" Grid.Row="1" Grid.Column="1" Grid.RowSpan="3"/>

    </Grid>
</Window>
