<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Medien" Height="450" Width="800">
    <Grid>
        <ListView x:Name="List_Media" MouseDoubleClick="List_Media_MouseDoubleClick"  KeyDown="List_Media_KeyDown" Margin="0,37,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Titel"  Width="320" DisplayMemberBinding="{Binding Path=MyTitle}"/>
                    <GridViewColumn Header="Zuletzt" Width="160" DisplayMemberBinding="{Binding Path=MyLastWatchDate}"/>
                    <GridViewColumn Header="Wertung" Width="80" DisplayMemberBinding="{Binding Path=MyRating}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="Button_Add" Content="Hinzufügen" Height="22" Width="89" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="Button_Add_Click"/>
    </Grid>
</Window>
