<Page x:Class="GUI.Tile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      Title="Tile" Margin="10">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="200" MaxWidth="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MaxHeight="480"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Button x:Name="click" Grid.RowSpan="2" Click="Click_Click" Panel.ZIndex="1" Opacity="0"/>

        <Image x:Name="image"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" MaxWidth="200">
            <TextBlock x:Name="title" Grid.Row="1" Text="Titel" Foreground="#FFEAEAEA" FontSize="20" TextAlignment="Center" TextWrapping="Wrap" Height="60"/>
        </StackPanel>

    </Grid>
</Page>
