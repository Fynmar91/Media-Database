<Page x:Class="GUI.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPage">
    
    <Grid>
        <TextBox x:Name="Box_myTitle" HorizontalAlignment="Left" Margin="42,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="343" FontSize="20"/>
        <CheckBox x:Name="checkBox_myIsWatched" Content="CheckBox" HorizontalAlignment="Left" Margin="42,85,0,0" VerticalAlignment="Top" Foreground="#FFE0E0E0" FontSize="20"/>
        <DatePicker x:Name="Date_myReleaseDate" HorizontalAlignment="Left" Margin="42,116,0,0" VerticalAlignment="Top" FontSize="20" Width="198" FirstDayOfWeek="Monday"/>
        <DatePicker x:Name="Date_myFirstWatchDate" HorizontalAlignment="Left" Margin="42,156,0,0" VerticalAlignment="Top" FontSize="20" Width="198" FirstDayOfWeek="Monday"/>
        <TextBox x:Name="Box_myRating" HorizontalAlignment="Left" Margin="42,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="87" FontSize="20"/>

        <TextBox x:Name="Box_myAuthor" HorizontalAlignment="Left" Margin="407,51,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="332" FontSize="20"/>

        <Button x:Name="Button_Check" Content="Kontrollieren" HorizontalAlignment="Left" Margin="120,307,0,0" VerticalAlignment="Top" Width="120" Click="Button_Check_Click"/>
        <Button x:Name="Button_Add" Content="Hinzufügen" HorizontalAlignment="Left" Margin="120,339,0,0" VerticalAlignment="Top" Width="120" Click="Button_Add_Click"/>
        <ComboBox x:Name="comboBox_MediaChoice" HorizontalAlignment="Left" Margin="42,10,0,0" VerticalAlignment="Top" Width="178" FontSize="20"/>

    </Grid>
</Page>
