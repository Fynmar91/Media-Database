<Page x:Class="GUI.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPage">

    <Page.Resources>
        <Style TargetType="{x:Type Button}" x:Key="SameBackgroundButton">
            <Setter Property="Background" Value="#FF2B2B2B" />
            <Setter Property="Foreground" Value="#FFF0F0F0" />
            <Setter Property="Margin" Value="0,2,0,2" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="Border" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF636363" TargetName="Border" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <TextBox x:Name="Box_myTitle" HorizontalAlignment="Left" Margin="42,51,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="343" FontSize="20"/>
        <CheckBox x:Name="checkBox_myIsWatched" Content="CheckBox" HorizontalAlignment="Left" Margin="42,85,0,0" VerticalAlignment="Top" Foreground="#FFE0E0E0" FontSize="20"/>
        <DatePicker x:Name="Date_myReleaseDate" HorizontalAlignment="Left" Margin="42,116,0,0" VerticalAlignment="Top" FontSize="20"/>
        <DatePicker x:Name="Date_myFirstWatchDate" HorizontalAlignment="Left" Margin="42,156,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="Box_myRating" HorizontalAlignment="Left" Margin="42,196,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="147" FontSize="20"/>

        <TextBox x:Name="Box_myAuthor" HorizontalAlignment="Left" Margin="407,51,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="332" FontSize="20"/>

        <Button x:Name="Button_Check" Content="Kontrollieren" HorizontalAlignment="Left" Margin="120,307,0,0" VerticalAlignment="Top" Width="120" Click="Button_Check_Click" Style="{StaticResource SameBackgroundButton}"/>
        <Button x:Name="Button_Add" Content="Hinzufügen" HorizontalAlignment="Left" Margin="120,339,0,0" VerticalAlignment="Top" Width="120" Click="Button_Add_Click" Style="{StaticResource SameBackgroundButton}"/>

    </Grid>
</Page>
