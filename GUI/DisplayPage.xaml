<Page x:Class="GUI.DisplayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI"
      mc:Ignorable="d" 
      Title="DisplayPage" Margin="20" >

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" MaxWidth="600"></ColumnDefinition>
			<ColumnDefinition Width="*" MaxWidth="900"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"></RowDefinition>
		</Grid.RowDefinitions>

		<Viewbox MaxWidth="600" HorizontalAlignment="Center" VerticalAlignment="Center" >
			<Image x:Name="image"/>
		</Viewbox>

		<StackPanel x:Name="displayStack" MaxWidth="1600" Margin="20" Grid.Column="1"/>

	</Grid>
</Page>
